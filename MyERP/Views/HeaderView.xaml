<UserControl x:Class="MyERP.Views.HeaderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid MinWidth="430">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border BorderBrush="{StaticResource AccentBrush}" Width="71" Height="82" BorderThickness="1,10,1,1" Background="Transparent">
            <Image Source="myerp.jpg" Stretch="Fill"/>
        </Border>
        <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="8,16,0,0" HorizontalAlignment="Left" >
            <TextBlock Text="MYERP" FontFamily="Segoe UI" FontSize="12" Foreground="{StaticResource BasicBrush}"/>
            <TextBlock Text="MODULE NAME" FontFamily="Segoe UI Light" FontSize="24" Foreground="{StaticResource AccentBrush}"/>
        </StackPanel>
    </Grid>
</UserControl>
