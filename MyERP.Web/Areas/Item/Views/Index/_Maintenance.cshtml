                              .ForceSelection(true)
                              .ValidateOnBlur(true)
                              .ValidateOnChange(true)
                              .ListConfig(Html.X().BoundList()
                                  .LoadingText("Searching...")
                                  .ItemTpl(Html.X().XTemplate()
                                      .Html(@<text>
                                                <div class="search-item">
                                                    <h3>{Code}</h3>
                                                    {Description}
                                                </div>
                                             </text>)
                                  )
                              )
