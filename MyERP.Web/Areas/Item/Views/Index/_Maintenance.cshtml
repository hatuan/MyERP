                      .TypeAhead(true)
                      .MinChars(0)
                      .PageSize(10)
                      .SelectOnTab(true)
                      .ForceSelection(true)
                      .ValidateOnBlur(true)
                      .ValidateOnChange(true)
                      .ListConfig(Html.X().BoundList()
                          .LoadingText("Searching...")
