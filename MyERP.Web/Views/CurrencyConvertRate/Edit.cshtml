@model MyERP.Web.Models.CurrencyConvertRateEditViewModel

@{
    ViewBag.Title = "Edit Currency Convert Rate";
}

<div class="page-header">
    <div class="row">
        <div class="col-sm-8">
            <h3 class="pull-left">
                @ViewBag.Title
            </h3>
        </div>
        <div class="col-sm-4">
            <div class="pull-right">
                <div style="bottom: 15px; position: relative; top: 15px">
                    <a class="btn btn-primary" href="#" id="save-button"><span class="glyphicon glyphicon-ok"></span> Save</a>
                </div>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm("Edit", "CurrencyConvertRate", new { currentFilter = ViewBag.CurrentFilter }, FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", role = "form", id = "edit-form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="row">
        <h4 class="col-md-12">
            <span>1</span>. Basic Info
        </h4>
        <div class="col-md-12" style="height: 10px;"></div>
        <div class="form-group">
            @Html.LabelFor(m => m.CurrencyCode, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.CurrencyCode, new { @class = "form-control", data_urlbase = Url.Content(MyERP.Web.WebApiOdataConfig.UrlPrefixRelative), data_autocomplete_id = "currency-id", data_autocomplete = "currency-code" })
                @Html.ValidationMessageFor(m => m.CurrencyCode, "", new { @class = "text-danger" })
            </div>
            @Html.HiddenFor(m => m.CurrencyId, htmlAttributes: new { id = "currency-id" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.CurrencyRelationCode, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.CurrencyRelationCode, new { @class = "form-control", data_urlbase = Url.Content(MyERP.Web.WebApiOdataConfig.UrlPrefixRelative), data_autocomplete_id = "currency-relation-id", data_autocomplete = "currency-code" })
                @Html.ValidationMessageFor(m => m.CurrencyRelationCode, "", new { @class = "text-danger" })
            </div>
            @Html.HiddenFor(m => m.CurrencyRelationId, htmlAttributes: new { id = "currency-relation-id" })
        </div>
        
        <div class="form-group">
            @Html.LabelFor(m => m.ValidFrom, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.ValidFrom, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CurrencyRelationCode, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(m => m.ExchangeRateAmount, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.ExchangeRateAmount, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ExchangeRateAmount, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(m => m.RelationalExchRateAmount, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.RelationalExchRateAmount, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.RelationalExchRateAmount, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(m => m.Status, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(m => m.Status, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        @Html.HiddenFor(m=>m.Id)
        @Html.HiddenFor(m => m.Version)
    </div>

}
@section Scripts {
    <script type="text/javascript" src="~/Scripts/myerp.autocomplete.js"></script>
    <script type="text/javascript">
        $(function() {
            $("#save-button").click(function() {
                $("#edit-form").submit();
            });
            $("#ExchangeRateAmount").kendoNumericTextBox({ spinners: false });
            $("#RelationalExchRateAmount").kendoNumericTextBox({ spinners: false });
            $("#ValidFrom").kendoDatePicker({});
        });
    </script>
}