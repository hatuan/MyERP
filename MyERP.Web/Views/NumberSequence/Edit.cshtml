@model MyERP.Web.Models.NumberSequenceEditViewModel

@{
    ViewBag.Title = "Edit Number Sequence";
}

<div class="page-header">
    <div class="row">
        <div class="col-sm-8">
            <h3 class="pull-left">
                @ViewBag.Title
            </h3>
        </div>
        <div class="col-sm-4">
            <div class="pull-right">
                <div style="bottom: 15px; position: relative; top: 15px">
                    <a class="btn btn-primary" href="#" id="save-button"><span class="glyphicon glyphicon-ok"></span> Save</a>
                </div>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm("Edit", "NumberSequence", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", role = "form", id = "save-number-sequence" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(false, "", new { @class = "text-danger" }) //true to have the summary display model-level errors only, or false to have the summary display all errors

    <div class="row">
        <h4 class="col-md-12">
            <span>1</span>. Basic Info
        </h4>
        <div class="col-md-12" style="height: 10px;"></div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Code, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Code, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row" style="border-top-width: 1px; border-top-style: solid; border-top-color: rgb(238, 238, 238); margin-top: 15px;">
        <h4 class="col-md-12">
            <span>2</span>. Number Sequence Info
        </h4>
        <div class="col-md-12" style="height: 10px;"></div>
        <div class="form-group">
            @Html.LabelFor(m => m.FormatNo, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FormatNo, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.StartingNo, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.StartingNo, new { @class = "form-control", type = "number" })
                @Html.ValidationMessageFor(m => m.StartingNo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.EndingNo, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.EndingNo, new { @class = "form-control", type = "number" })
                @Html.ValidationMessageFor(m => m.EndingNo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.CurrentNo, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.CurrentNo, new { @class = "form-control", type = "number" })
                @Html.ValidationMessageFor(m => m.CurrentNo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <label>
                        <span>@Html.CheckBoxFor(m => m.Manual)</span>
                        <span>@Html.LabelFor(m => m.Manual)</span>
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Status, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(m => m.Status, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.Version)
    </div>

}
@section Scripts {
    <script type="text/javascript" src="~/Scripts/myerp.autocomplete.js"></script>
    <script type="text/javascript">
        $(function() {
            $("#save-button").click(function() {
                $("#save-number-sequence").submit();
            });
        });
    </script>
}
