@model List<MyERP.Web.Models.AccountViewModels>

@{
    ViewBag.Title = "Account";
}
<div class="page-header">
    <h2>@ViewBag.Title</h2>
</div>

@Html.ValidationSummary("", new { @class = "text-danger" })

<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-navbar-account-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        
        <!-- Collect the nav links, forms, and other content for toggling -->
        @using (Html.BeginForm("Create", "Account", FormMethod.Post, htmlAttributes: new { @class = "navbar-form navbar-left"}))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.TextBox("newaccount", null, htmlAttributes: new { @class = "form-control", placeholder = "New Account", type = "text" })
                <button type="submit" class="btn btn-default" name="addnew">New</button>
            </div>
        }

        @*<form class="navbar-form navbar-left" >
            <div class="form-group">
                <input type="text" class="form-control" placeholder="New Account">
            </div>
            <button type="submit" class="btn btn-default" name="addNew">New</button>
        </form>*@
       
        @using (Html.BeginForm("Search", "Account", FormMethod.Post, htmlAttributes: new { @class = "navbar-form navbar-right", role="search" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.TextBox("search", null, htmlAttributes: new { @class = "form-control", placeholder = "Search", type = "text" })
                <button type="submit" class="btn btn-default" name="addnew">Search</button>
            </div>
        }

    </div>
</nav>

