<!DOCTYPE html>
<html lang="@System.Threading.Thread.CurrentThread.CurrentUICulture.Name">
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MyERP Application</title>

    
    @Styles.Render("~/Content/3rdcss")
    @Styles.Render("~/Content/kendo/css")
    @Styles.Render("~/Content/select2/css")
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/kendo")
    @Scripts.Render("~/bundles/kendo/cultures")
    @Scripts.Render("~/bundles/select2")
    @Scripts.Render("~/bundles/myerp")
    
    @Scripts.Render("~/bundles/modernizr")
    
    @Scripts.Render("~/bundles/globalize")

    @{
        var culture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;
    }
    
    <script type="text/javascript">

        kendo.culture("@culture");

        $(function () {
            $('.datepicker').kendoDatePicker({ culture: "@culture" });
        });

        // Use $.getJSON instead of $.get if your server is not configured to return the
        // right MIME type for .json files.
        $.when(
            $.get("/Scripts/cldr/main/vi/numbers.json"),
            $.get("/Scripts/cldr/main/en/numbers.json"),
            $.get("/Scripts/cldr/main/en/ca-gregorian.json"),
            $.get("/Scripts/cldr/main/vi/ca-gregorian.json"),
            $.get("/Scripts/cldr/supplemental/likelySubtags.json"),
            $.get("/Scripts/cldr/supplemental/timeData.json"),
            $.get("/Scripts/cldr/supplemental/weekData.json")
        ).then(function () {

            // Normalize $.get results, we only need the JSON, not the request statuses.
            return [].slice.apply(arguments, [0]).map(function (result) {
                return result[0];
            });

        }).then(Globalize.load).then(function () {
            Globalize.locale("@culture");
        });

        //$.validator.methods.date = function (value, element) {
         //   return this.optional(element) || Globalize.parseDate(value) !== null;
        //}
    </script>
    
    @Scripts.Render("~/bundles/jquery.validate.globalize")

</head>
<body>
    <!--BEGIN WRAP-->
    <div id="wrap">
        <div class="navbar navbar-inverse navbar-static-top">
            <div class="container-fluid body-content">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("MyERP", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @if (Request.IsAuthenticated)
                        {
                            <li class="dropdown">
                                <a data-toggle="dropdown" href="#" id="dropdownMenu1">Modules <b class="caret"></b></a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                                    <li role="presentation">@Html.ActionLink("Financial Management", "Financial", "Module", routeValues: null, htmlAttributes: new {role = "menuitem", tabIndex = -1})</li>
                                    <li role="presentation">@Html.ActionLink("Sale", "Sale", "Module", routeValues: null, htmlAttributes: new {role = "menuitem", tabIndex = -1})</li>
                                    <li role="presentation">@Html.ActionLink("Purchase", "Purchase", "Module", routeValues: null, htmlAttributes: new {role = "menuitem", tabIndex = -1})</li>
                                    <li role="presentation">@Html.ActionLink("Contact Management", "Contact", "Module", routeValues: null, htmlAttributes: new {role = "menuitem", tabIndex = -1})</li>
                                    <li role="presentation">@Html.ActionLink("Manufacturing", "Manufacturing", "Module", routeValues: null, htmlAttributes: new {role = "menuitem", tabIndex = -1})</li>
                                    <li role="presentation">@Html.ActionLink("Warehouse", "Warehouse", "Module", routeValues: null, htmlAttributes: new {role = "menuitem", tabIndex = -1})</li>
                                    <li role="presentation" class="divider"></li>
                                    <li role="presentation">@Html.ActionLink("Master Setup", "Master", "Module", routeValues: null, htmlAttributes: new {role = "menuitem", tabIndex = -1})</li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a data-toggle="dropdown" href="#" id="dropdownBookmarks">Bookmarks <b class="caret"></b></a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownBookmarks">
                                    <li role="presentation"><a href="~/Account" role="menuitem" tabindex=-1>Account List</a></li>
                                    <li role="presentation" class="divider"></li>
                                    <li role="presentation"><a href="#" id="add-bookmark-link" role="menuitem" tabindex=-1> <span class="glyphicon glyphicon-plus"></span>  Add Bookmark</a></li>
                                </ul>
                            </li>
                        }
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                    </ul>
                    @if (Request.IsAuthenticated)
                    {
                        <form class="navbar-form navbar-left" role="search" onsubmit="return false;">
                            <div class="form-group">
                                @Html.TextBox("navbar-search-header", null, htmlAttributes: new {@class = "form-control", placeholder = "Search or type a command", type = "text", style = "font-size:85%; min-width=230px", autocomplete = "off"})
                            </div>
                        </form>
                    }
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>

        <div id="flash-message" class="flyover flyover-bottom">
            
        </div>

        <div id="body-content" class="container-fluid body-content">
            @RenderBody()   
        </div>
    </div> <!--END WRAP-->

    @RenderSection("Footer", false)

    <!--BEGIN COMFIRM DELETE-->
    <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Confirm Delete</h4>
                </div>

                <div class="modal-body">
                    <p>Do you want to proceed?</p>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <a href="#" class="btn btn-danger danger">Delete</a>
                </div>
            </div>
        </div>
    </div>
    <!--END COMFIRM DELETE-->
    
    @RenderSection("scripts", required: false)

</body>
</html>
