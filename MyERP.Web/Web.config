<configuration>
  <system.webServer>
    <validation validateIntegratedModeConfiguration="false" />
  <handlers>
      <remove name="ExtensionlessUrlHandler-Integrated-4.0" />
      <remove name="OPTIONSVerbHandler" />
      <remove name="TRACEVerbHandler" />
      <add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="*" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0" />
    </handlers>
  </system.webServer>
  <system.web>
    <authentication mode="None"/>
    <profile enabled="true">
      <properties>
        <add name="Id" />
        <add name="ClientId" />
      </properties>
    </profile>
    <membership defaultProvider="myCustomProvider">
      <providers>
        <add name="myCustomProvider" type="MyERP.Web.CustomMembershipProvider, MyERP.Web" />
      </providers>
    </membership>
    <roleManager enabled="true" defaultProvider="myCustomProvider">
      <providers>
        <add name="myCustomProvider" type="MyERP.Web.CustomRoleProvider, MyERP.Web" />
      </providers>
    </roleManager>
    <compilation debug="true" targetFramework="4.5" />
    <httpRuntime targetFramework="4.5" />
    <customErrors mode="Off" />
  </system.web>
  <connectionStrings>
    <add name="Connection" connectionString="server=127.0.0.1;port=5432;database=myerp;userid=postgres;password=postgres" providerName="Npgsql" />
  </connectionStrings>
  <system.serviceModel>
    <services>
      <!--
      <service name="MyERP-Web-MyERPAuthenticationDomainService" behaviorConfiguration="MyERP-Web-MyERPAuthenticationDomainService"></service>
      <service name="MyERP-Web-MyERPDomainService" behaviorConfiguration="MyERP-Web-MyERPDomainService"></service>
      <service name="MyERP-Web-MyERPOtherDomainService" behaviorConfiguration="MyERP-Web-MyERPOtherDomainService"></service>
      -->
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="DebugEnabled">
          <serviceDebug includeExceptionDetailInFaults="True" />
        </behavior>
        <!--
        <behavior name="MyERP-Web-MyERPAuthenticationDomainService">
          <serviceMetadata httpGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="true" />
          <dataContractSerializer maxItemsInObjectGraph="655360"/>
        </behavior>
        <behavior name="MyERP-Web-MyERPDomainService">
          <serviceMetadata httpGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="true" />
          <dataContractSerializer maxItemsInObjectGraph="655360"/>
        </behavior>
        <behavior name="MyERP-Web-MyERPOtherDomainService">
          <serviceMetadata httpGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="true" />
          <dataContractSerializer maxItemsInObjectGraph="655360"/>
        </behavior>
        -->
      </serviceBehaviors>
    </behaviors>
    <serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true" />
  </system.serviceModel>
</configuration>